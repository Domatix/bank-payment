<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="res_config_settings_view_form" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.account</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="40"/>
      <field name="inherit_id" ref="account.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@id='bank_cash']" position="after">
          <h2>Payment documents</h2>
          <div class="row mt16 o_settings_container" id="setup">
            <div class="col-xs-12 col-md-6 o_setting_box">
              <div class="o_setting_left_pane"/>
              <div class="o_setting_right_pane">
                <label for="default_document_due_move_account_id"/>
                <div class="text-muted">
                  Default account for account moves generated by expiration of documents.
                </div>
                <field name="default_document_due_move_account_id"/>
              </div>
            </div>
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane"/>
              <div class="o_setting_right_pane">
                <label for="default_expiration_move_journal_id"/>
                <div class="text-muted">
                  Default journal for account moves generated by expiration of documents.
                </div>
                <field name="default_expiration_move_journal_id"/>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>